---
import { ROUTES } from "@/utils/routes";

const SOCIAL_LINKS = [
  {
    name: "Twitter",
    href: ROUTES.twitter,
  },
  {
    name: "Instagram",
    href: ROUTES.instagram,
  },
  {
    name: "LinkedIn",
    href: ROUTES.linkedin,
  },
  {
    name: "Resume",
    href: ROUTES.resume,
  },
];
---

<section class="px-5 py-50 bg-base-1">
  <div class="grid grid-cols-10 gap-4">
    <p
      class="text-xs uppercase tracking-wide text-base-5 font-semibold col-span-3"
    >
      Availability
    </p>

    <div class="col-span-4 flex flex-col text-pretty gap-5">
      <p class="text-3xl leading-tight tracking-tight font-semibold">
        Available for remote frontend or product design roles, and selective
        freelance work.
      </p>

      <a
        class="text-3xl text-base-5 leading-tight tracking-tight font-semibold transition-colors ease-smooth hover:text-base-10"
        href="mailto:hello@pixels.studio"
      >
        hello@pixels.studio
      </a>
    </div>

    <nav class="col-span-2 col-start-9 flex flex-col gap-2.5">
      {
        SOCIAL_LINKS.map((link) => (
          <a
            class="text-3xl text-base-5 font-semibold leading-tight tracking-tight transition-colors ease-smooth hover:text-base-10"
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
          >
            {link.name}
          </a>
        ))
      }
    </nav>
  </div>
</section>

<footer class="px-5 py-5 bg-base-1 border-t border-base-10/5">
  <div class="grid grid-cols-10 gap-4">
    <p
      class="text-xs uppercase tracking-wide text-base-5 font-semibold col-span-3"
    >
      Â© Abhishek Kambli
    </p>

    <a
      class="text-xs uppercase tracking-wide text-base-5 hover:text-base-0 font-semibold col-span-3"
      href="#"
    >
      Back to top
    </a>

    <a
      class="text-xs uppercase tracking-wide text-base-5 hover:text-base-0 font-semibold col-span-2 col-start-9"
      href={ROUTES.colophon}>Colophon</a
    >
  </div>
</footer>

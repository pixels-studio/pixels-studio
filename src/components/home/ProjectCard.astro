---
interface Props {
  title: string;
  description: string;
  cover?: string;
  product: string;
  tags: string[];
  slug: string;
}

const { title, description, cover, product, tags, slug } = Astro.props;
---

<a href={`/work/${slug}`} class="group block">
  <div class="relative aspect-2/1 overflow-hidden bg-base-2">
    {
      cover && (
        <img
          src={cover}
          alt={title}
          class="h-full w-full object-cover transition-transform duration-500 ease-smooth group-hover:scale-105"
          loading="lazy"
          transition:name={`work-cover-${slug}`}
        />
      )
    }
  </div>
</a>
